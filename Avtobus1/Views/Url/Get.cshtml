@model List<Url>

@{
    ViewBag.Title = "Urls";
}

<div>
    <a asp-controller="Url" asp-action="add" class="btn btn-primary">New Url</a>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <p>@Html.DisplayNameFor(model => model.FirstOrDefault().LongUrl)</p>
                </th>
                <th>
                    <p>@Html.DisplayNameFor(model => model.FirstOrDefault().ShortUrl)</p>
                </th>
                <th>
                    <p>@Html.DisplayNameFor(model => model.FirstOrDefault().Date)</p>
                </th>
                <th>
                    <p>@Html.DisplayNameFor(model => model.FirstOrDefault().ClickCount)</p>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Url item in Model)
            {
                <tr>
                    <td>
                        <p>@item.LongUrl</p>
                    </td>
                    <td>
                        <a asp-controller="ShortUrl" asp-action="Get" class="link-primary" asp-route-shortUrl="@item.ShortUrl">@item.ShortUrl</a>
                    </td>
                    <td>
                        <p>@item.Date.ToString("dd/MM/yyyy")</p>
                    </td>
                    <td>
                        <p>@item.ClickCount</p>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="Url" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <form asp-controller="Url" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                </tr>
            }
        </tbody>
    </table>
</div>